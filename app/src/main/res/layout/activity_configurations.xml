<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team13.nim.Configurations">


    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:onClick="startGame"
        android:text="@string/start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="31dp"
        android:fontFamily="monospace"
        android:text="@string/rows"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />


    <TextView
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/who_goes_first"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.0" />


    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rows5"
        app:layout_constraintRight_toRightOf="@+id/who"
        app:layout_constraintTop_toBottomOf="@+id/who"
        android:orientation='horizontal'
        android:layout_below="@+id/rows"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:weightSum="1">


        <RadioButton
            android:id="@+id/rows5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="0.50"
            android:text="5"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="137dp" />

        <RadioButton
            android:id="@+id/rows6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="6"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="137dp" />

        <RadioButton
            android:id="@+id/rows7"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="7"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="137dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup2"
        android:layout_marginTop="49dp"
        android:fontFamily="monospace"
        android:text="Difficulty"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/easy"
        android:orientation='horizontal'
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp">


        <RadioButton
            android:id="@+id/easy"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/radioGroup1"
            android:layout_alignEnd="@+id/rows"
            android:layout_alignRight="@+id/rows"
            android:layout_marginBottom="17dp"
            android:layout_weight="4.23"
            android:buttonTint="?attr/colorAccent"
            android:text="Casual"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="332dp" />

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.88"
            android:buttonTint="@android:drawable/alert_light_frame"
            android:text="Hardcore"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="332dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/who"
        android:layout_marginTop="25dp"
        android:checkedButton="@+id/youStart"
        android:orientation='horizontal'
        app:layout_constraintRight_toRightOf="@+id/rows"
        app:layout_constraintTop_toBottomOf="@+id/rows">

        <RadioButton
            android:id="@+id/youStart"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:layout_weight="6.75"
            android:text="You"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="229dp" />

        <RadioButton
            android:id="@+id/computerStart"
            style="@android:style/Widget.CompoundButton.RadioButton"
            android:layout_width="307dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Computer"
            tools:layout_editor_absoluteX="273dp"
            tools:layout_editor_absoluteY="229dp" />
    </RadioGroup>

</RelativeLayout>
